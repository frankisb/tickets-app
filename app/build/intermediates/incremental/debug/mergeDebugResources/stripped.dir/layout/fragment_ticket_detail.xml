<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negocio"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvCurrentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado actual: "
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Último mensaje de soporte:"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/imgTicket"
            android:layout_width="387dp"
            android:layout_height="156dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/etResponse"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_marginTop="48dp"
            android:hint="@string/responder_al_cliente" />

        <Button
            android:id="@+id/btnSendResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enviar_respuesta"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cambiar_estado"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnInProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/In_progress" />

        <Button
            android:id="@+id/btnEscalated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Escalated_to_level_2"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCallSoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/will_call_you_in_a_few_minutes_" />

    </LinearLayout>
</ScrollView>
